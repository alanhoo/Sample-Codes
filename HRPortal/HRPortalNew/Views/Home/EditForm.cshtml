@using HRPortal.Models
@model Application
@{
    ViewBag.Title = "EditForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Form</h2>
<div>
    <h3>Edit Application</h3>
    @using (Html.BeginForm("EditForm", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.HiddenFor(m => m.applicantId)
            <p>
                @Html.ValidationSummary(true, "Please fix the following errors:")
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.Name)
            </p>
            <p>
                <label>Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.Email)
            </p>
            <p>
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.Phone)
            </p>
            <p>
                <label>Phone</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.Address)
            </p>
            <p>
                <label>Address</label>
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.City)
            </p>
            <p>
                <label>City</label>
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.State)
            </p>
            <p>
                <label>State</label>
                @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.Zip)
            </p>
            <p>
                <label>Zip</label>
                @Html.TextBoxFor(m => m.Zip, new { @class = "form-control" })
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.Experiences)
            </p>
            <p>
                <label>Experience</label>
                @Html.TextAreaFor(m => m.Experiences, 6, 40, new { @class = "form-control" })
            </p>
            <p>
                @Html.ValidationMessageFor(m => m.Education)
            </p>
            <p>
                <label>Education</label>
                @Html.TextAreaFor(m => m.Education, 6, 40, new { @class = "form-control" })
            </p>

            <button class="btn btn-primary">Save</button>
        </div>
    }
</div>

